{"ast":null,"code":"import { Map, View } from 'ol';\nimport { Tile as TileLayer } from 'ol/layer';\nimport { OSM } from 'ol/source';\nimport Overlay from 'ol/Overlay';\nimport 'node_modules/ol/ol.css'; // Импортируем стили OpenLayers\n\nexport default {\n  name: 'CustomMap',\n  data() {\n    return {\n      map: null,\n      marker: null,\n      overlay: null,\n      coordinates: ''\n    };\n  },\n  mounted() {\n    this.map = new Map({\n      target: 'map',\n      layers: [new TileLayer({\n        source: new OSM()\n      })],\n      view: new View({\n        center: [0, 0],\n        zoom: 2\n      })\n    });\n    this.map.on('click', this.handleMapClick);\n    this.overlay = new Overlay({\n      element: document.createElement('div'),\n      positioning: 'bottom-center',\n      stopEvent: false\n    });\n    this.map.addOverlay(this.overlay);\n  },\n  methods: {\n    handleMapClick(event) {\n      const coords = event.coordinate;\n      const lonLat = ol.proj.transform(coords, 'EPSG:3857', 'EPSG:4326');\n      this.coordinates = lonLat.map(coord => coord.toFixed(6)).join(', ');\n      if (this.marker) {\n        this.map.removeOverlay(this.marker);\n      }\n      const markerElement = document.createElement('div');\n      markerElement.className = 'marker';\n      this.marker = new Overlay({\n        element: markerElement,\n        position: coords,\n        positioning: 'center-center',\n        stopEvent: false\n      });\n      this.map.addOverlay(this.marker);\n      this.overlay.setPosition(coords);\n      const element = this.overlay.getElement();\n      element.innerHTML = this.coordinates;\n    }\n  }\n};","map":{"version":3,"names":["Map","View","Tile","TileLayer","OSM","Overlay","name","data","map","marker","overlay","coordinates","mounted","target","layers","source","view","center","zoom","on","handleMapClick","element","document","createElement","positioning","stopEvent","addOverlay","methods","event","coords","coordinate","lonLat","ol","proj","transform","coord","toFixed","join","removeOverlay","markerElement","className","position","setPosition","getElement","innerHTML"],"sources":["C:\\Users\\aefa1\\Desktop\\VUE JS\\vue-layers\\src\\components\\Map.vue"],"sourcesContent":["<template>\r\n    <div id=\"map\"></div>\r\n  </template>\r\n  \r\n  <script>\r\n  import { Map, View } from 'ol';\r\n  import { Tile as TileLayer } from 'ol/layer';\r\n  import { OSM } from 'ol/source';\r\n  import Overlay from 'ol/Overlay';\r\n  import 'node_modules/ol/ol.css'; // Импортируем стили OpenLayers\r\n  \r\n  export default {\r\n    name: 'CustomMap',\r\n    data() {\r\n      return {\r\n        map: null,\r\n        marker: null,\r\n        overlay: null,\r\n        coordinates: '',\r\n      };\r\n    },\r\n    mounted() {\r\n      this.map = new Map({\r\n        target: 'map',\r\n        layers: [\r\n          new TileLayer({\r\n            source: new OSM(),\r\n          }),\r\n        ],\r\n        view: new View({\r\n          center: [0, 0],\r\n          zoom: 2,\r\n        }),\r\n      });\r\n  \r\n      this.map.on('click', this.handleMapClick);\r\n  \r\n      this.overlay = new Overlay({\r\n        element: document.createElement('div'),\r\n        positioning: 'bottom-center',\r\n        stopEvent: false,\r\n      });\r\n      this.map.addOverlay(this.overlay);\r\n    },\r\n    methods: {\r\n      handleMapClick(event) {\r\n        const coords = event.coordinate;\r\n        const lonLat = ol.proj.transform(coords, 'EPSG:3857', 'EPSG:4326');\r\n  \r\n        this.coordinates = lonLat.map(coord => coord.toFixed(6)).join(', ');\r\n  \r\n        if (this.marker) {\r\n          this.map.removeOverlay(this.marker);\r\n        }\r\n  \r\n        const markerElement = document.createElement('div');\r\n        markerElement.className = 'marker';\r\n        this.marker = new Overlay({\r\n          element: markerElement,\r\n          position: coords,\r\n          positioning: 'center-center',\r\n          stopEvent: false,\r\n        });\r\n        this.map.addOverlay(this.marker);\r\n  \r\n        this.overlay.setPosition(coords);\r\n        const element = this.overlay.getElement();\r\n        element.innerHTML = this.coordinates;\r\n      },\r\n    },\r\n  };\r\n  </script>\r\n  \r\n  <style scoped>\r\n  #map {\r\n    width: 100%;\r\n    height: 100%;\r\n  }\r\n  \r\n  .marker {\r\n    width: 20px;\r\n    height: 20px;\r\n    background-color: black;\r\n    border-radius: 50%;\r\n  }\r\n  </style>\r\n  "],"mappings":"AAKE,SAASA,GAAG,EAAEC,IAAG,QAAS,IAAI;AAC9B,SAASC,IAAG,IAAKC,SAAQ,QAAS,UAAU;AAC5C,SAASC,GAAE,QAAS,WAAW;AAC/B,OAAOC,OAAM,MAAO,YAAY;AAChC,OAAO,wBAAwB,EAAE;;AAEjC,eAAe;EACbC,IAAI,EAAE,WAAW;EACjBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,GAAG,EAAE,IAAI;MACTC,MAAM,EAAE,IAAI;MACZC,OAAO,EAAE,IAAI;MACbC,WAAW,EAAE;IACf,CAAC;EACH,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,IAAI,CAACJ,GAAE,GAAI,IAAIR,GAAG,CAAC;MACjBa,MAAM,EAAE,KAAK;MACbC,MAAM,EAAE,CACN,IAAIX,SAAS,CAAC;QACZY,MAAM,EAAE,IAAIX,GAAG,CAAC;MAClB,CAAC,CAAC,CACH;MACDY,IAAI,EAAE,IAAIf,IAAI,CAAC;QACbgB,MAAM,EAAE,CAAC,CAAC,EAAE,CAAC,CAAC;QACdC,IAAI,EAAE;MACR,CAAC;IACH,CAAC,CAAC;IAEF,IAAI,CAACV,GAAG,CAACW,EAAE,CAAC,OAAO,EAAE,IAAI,CAACC,cAAc,CAAC;IAEzC,IAAI,CAACV,OAAM,GAAI,IAAIL,OAAO,CAAC;MACzBgB,OAAO,EAAEC,QAAQ,CAACC,aAAa,CAAC,KAAK,CAAC;MACtCC,WAAW,EAAE,eAAe;MAC5BC,SAAS,EAAE;IACb,CAAC,CAAC;IACF,IAAI,CAACjB,GAAG,CAACkB,UAAU,CAAC,IAAI,CAAChB,OAAO,CAAC;EACnC,CAAC;EACDiB,OAAO,EAAE;IACPP,cAAcA,CAACQ,KAAK,EAAE;MACpB,MAAMC,MAAK,GAAID,KAAK,CAACE,UAAU;MAC/B,MAAMC,MAAK,GAAIC,EAAE,CAACC,IAAI,CAACC,SAAS,CAACL,MAAM,EAAE,WAAW,EAAE,WAAW,CAAC;MAElE,IAAI,CAAClB,WAAU,GAAIoB,MAAM,CAACvB,GAAG,CAAC2B,KAAI,IAAKA,KAAK,CAACC,OAAO,CAAC,CAAC,CAAC,CAAC,CAACC,IAAI,CAAC,IAAI,CAAC;MAEnE,IAAI,IAAI,CAAC5B,MAAM,EAAE;QACf,IAAI,CAACD,GAAG,CAAC8B,aAAa,CAAC,IAAI,CAAC7B,MAAM,CAAC;MACrC;MAEA,MAAM8B,aAAY,GAAIjB,QAAQ,CAACC,aAAa,CAAC,KAAK,CAAC;MACnDgB,aAAa,CAACC,SAAQ,GAAI,QAAQ;MAClC,IAAI,CAAC/B,MAAK,GAAI,IAAIJ,OAAO,CAAC;QACxBgB,OAAO,EAAEkB,aAAa;QACtBE,QAAQ,EAAEZ,MAAM;QAChBL,WAAW,EAAE,eAAe